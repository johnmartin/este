{
  "env": {
    "mocha": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "ava"
  ],
  "extends" : [
    "airbnb",
    "plugin:ava/recommended"
  ],
  "rules": {
    "default-case": 0,
    "global-require": 0,
    "new-cap": [2, {"capIsNew": false, "newIsCap": true}],
    "no-class-assign": 0,
    "no-confusing-arrow": 0,
    "no-floating-decimal": 0,
    "no-nested-ternary": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "react/prefer-stateless-function": 0
  }
}
